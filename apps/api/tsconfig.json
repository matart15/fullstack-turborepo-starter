{
  "extends": "config/tsconfig.base.json",
  "display": "Server",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@libs/*": ["src/libs/*"],
      "@tests/*": ["tests/*"]
    },
    "target": "es2019",
    "module": "commonjs",
    /* Experimental Options */
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    /* Advanced Options */

    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "noEmit": false,
    "incremental": false,
  },
  "ts-node": {
    "esm": true
  }
}

